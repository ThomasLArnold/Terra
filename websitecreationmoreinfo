    <script>
        function redirectToPayment() {
            window.location.href = "./payment.html"; // Redirect to payment page
        }
        
        // Animate payment.html section when user scrolls to bottom
        window.onscroll = function() {
            var paymentSection = document.getElementById("payment");
            var scrollPosition = window.scrollY + window.innerHeight;
            var paymentSectionPosition = paymentSection.offsetTop + paymentSection.offsetHeight;
            
            if (scrollPosition >= paymentSectionPosition) {
                paymentSection.style.opacity = "1";
                paymentSection.style.transform = "translateY(0)";
            }
        };
    </script>
